<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash screen theme. -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.Station</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowLayoutInDisplayCutoutMode">default</item>
    </style>

    <!-- Application theme. -->
    <style name="Theme.Station" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLayoutInDisplayCutoutMode">default</item>
    </style>

</resources>
